@model AssetReplacement.Models.AssetRequest

@{
    ViewData["Title"] = "Create";
}

<div class="row gutters justify-content-center">
    <div class="col-10 mt-5">
        <form asp-action="Create">
            <div class="card m-0">
                <div class="container d-flex justify-content-center">
                    <div class="card-header text-center">
                        <h3 class="card-title font-weight-bold">Request Form Replacement Asset</h3>
                    </div>
                </div>


                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row gutters ">

                        <div class="col-6">
                            <div class="form-group">
                                <label class="control-label">Name</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="Departement" class="control-label"></label>
                                <input asp-for="Departement" class="form-control" />
                                <span asp-validation-for="Departement" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="Type" class="control-label"></label>
                                <input asp-for="Type" class="form-control" />
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label class="control-label">Serial Number</label>
                                <input asp-for="SerialNumber" class="form-control" />
                                <span asp-validation-for="SerialNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label class="control-label">Baseline</label>
                                <input asp-for="Baseline" class="form-control" />
                                <span asp-validation-for="Baseline" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label class="control-label">Usage Location</label>
                                <input asp-for="UsageLocation" class="form-control" />
                                <span asp-validation-for="UsageLocation" class="text-danger"></span>
                            </div>
                        </div>
                        @* <div class="col-6">
                        <div class="form-group">
                        <label asp-for="ApprovalDate" class="control-label"></label>
                        <input asp-for="ApprovalDate" class="form-control" />
                        <span asp-validation-for="ApprovalDate" class="text-danger"></span>
                        </div> *@
                        <div class="col-6">
                            <div class="form-group">
                                <label class="control-label">Request Date</label>
                                <input asp-for="RequestDate" class="form-control" />
                                <span asp-validation-for="RequestDate" class="text-danger"></span>
                            </div>
                        </div>
                        @* <div class="col-6">
                        <div class="form-group">
                        <label asp-for="Justify" class="control-label"></label>
                        <input asp-for="Justify" class="form-control" />
                        <span asp-validation-for="Justify" class="text-danger"></span>
                        </div>
                        </div> *@

                        <div class="form-group">
                            <label asp-for="Reason" class="control-label"></label>
                            <textarea asp-for="Reason" class="form-control" id="reasonTextarea" placeholder="Enter Reason Request" maxlength="1000" rows="4"></textarea>
                            <div class="form-text text-muted">
                                <p id="characterLeft" class="help-block">140 characters left</p>
                            </div>
                            <span asp-validation-for="Reason" class="text-danger"></span>
                        </div>


                        <div class="container d-flex justify-content-center">
                            <input type="submit" value="Submit" class="btn btn-primary" style="margin: 0 5px;" />
                            <a asp-action="Index" class="btn btn-secondary" style="margin: 0 5px;">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

        <script>
            $(document).ready(function () {
                var justifyTextarea = $('#justifyTextarea');
                var characterLeftDisplay = $('#characterLeft');
                var maxLength = justifyTextarea.attr('maxlength');

                updateCharacterCount();

                justifyTextarea.on('input', function () {
                    updateCharacterCount();
                });

                function updateCharacterCount() {
                    var enteredText = justifyTextarea.val();
                    var remainingCharacters = maxLength - enteredText.length;
                    characterLeftDisplay.text(remainingCharacters + ' characters left');
                }
            });
        </script>

    }
}

